<p id="notice"><%= notice %></p>

<h1>AllTrails Calorie Counter</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Idnum</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trails.each do |trail| %>
      <tr>
        <td><%= trail.name %></td>
        <td><%= trail.idNum %></td>
        <td><%= link_to 'Edit', edit_trail_path(trail) %></td>
        <td><%= link_to 'Destroy', trail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<input type="range" name="pounds" id="points" value="150" min="75" max="300">
<label id="weightLabel">150 pounds</label>
<h2>0 calories</h2>

<br>

<select>
  <% @trails.each do |eachtrail| %>
    <option>
      <%= eachtrail.name %>
    </option>
  <% end %>
</select>

<%= link_to 'New Trail', new_trail_path %>
